<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  

  <%= f.submit '投稿' %>
<% end %>


<h1>投稿一覧</h1>
<% @books.each do |book| %>
  <p>タイトル</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  
  <p>ボディー</p>
  <span><%= book.body %></span>
  
  <p>画像</p>
  <%= attachment_image_tag book, :image, :fill, 100, 100, format: 'jpeg' %>
  
  
  
<% end %>